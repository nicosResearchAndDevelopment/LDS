@prefix lds:            <https://github.com/nicosResearchAndDevelopment/LDS/> .
@prefix owl:            <http://www.w3.org/2002/07/owl#> .
@prefix prov:           <http://www.w3.org/ns/prov#> .
@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .

lds:LegalEntity ## abstract
    a                owl:Class, skos:Concept ;
    ## TODO : SHACL
    rdfs:subClassOf  lds:Entity ;
    rdfs:subClassOf  lds:Legal ;
    skos:notation    "LegalEntity"^^xsd:string ;
    skos:prefLabel   "Legal Entity"@en ;
    skos:prefLabel   "Legale Entit√§t"@de ;
    skos:broader     lds:Entity ;
    skos:broader     lds:Legal ;
    skos:narrower    lds:Organization ;
    skos:narrower    lds:LegalPerson ;
    rdfs:isDefinedBy lds: .

lds:legalEntityIdentifier
    a                rdf:Property ;
    skos:notation    "legalEntityIdentifier"^^xsd:string ;
    skos:prefLabel   "Legal Entity Identifier"^^xsd:string ;
    rdfs:label       "Legal Entity Identifier"@en ;
    rdfs:domain      lds:LegalEntity ;
    rdfs:domain      lds:LegalEntityRepresentative ;
    rdfs:domain      lds:LegalPerson ;
    ## rdfs:range       ILO (intentionally left open) ;
    rdfs:comment     """'rdfs:range' :: follows given authoritative Entity, the Issuer, acting on stringent directives and regulations."""@en ;
    rdfs:isDefinedBy lds: .

lds:EntityConcepts
    skos:member lds:LegalEntity .

lds:LegalConcepts
    skos:member lds:LegalEntity .

lds:AllConcepts
    skos:member lds:LegalEntity .
